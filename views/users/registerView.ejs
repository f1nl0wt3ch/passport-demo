<div class="signup-form">
    <form action="/users/register" method="post">
        <h2>Register</h2>
        <p class="hint-text">Create your account. It's free and only takes a minute.</p>
        <div class="form-group">
            <div class="row">
                <div class="col-xs-6"><input type="text" class="form-control" name="firstName" placeholder="First Name"
                        required="required" value="<%- (passedObj && passedObj.firstName)? passedObj.firstName : '' %>"></div>
                <div class="col-xs-6"><input type="text" class="form-control" name="lastName" placeholder="Last Name"
                        required="required" value="<%- (passedObj && passedObj.lastName)? passedObj.lastName : '' %>"></div>
            </div>
        </div>
        <div class="form-group">
            <input type="email" class="form-control" name="email" placeholder="Email" required="required" value="<%- (passedObj && passedObj.email)? passedObj.email : '' %>">
        </div>
        <div class="form-group">
            <input type="password" class="form-control" name="password" placeholder="Password" required="required">
        </div>
        <div class="form-group">
            <input type="password" class="form-control" name="confirmPassword" placeholder="Confirm Password"
                required="required">
        </div>
        <div class="form-group text-center">
            <% if(passedObj && passedObj.errorArr) { passedObj.errorArr.forEach((error) => { %>
            <span class="label label-warning"><%= error.msg %></span>
            <% })} %>
        </div>
        <div class="form-group">
            <label class="checkbox-inline"><input type="checkbox" required="required"> I accept the <a href="#">Terms of
                    Use</a> &amp; <a href="#">Privacy Policy</a></label>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success btn-lg btn-block">Register Now</button>
        </div>
    </form>
    <div class="text-center">Already have an account? <a href="/users/login">Sign in</a></div>
</div>