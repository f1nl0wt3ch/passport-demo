<div class="login-form">
    <form action="/users/login" method="post">
        <h2 class="text-center">
            <% if(registered == "1") {%>
               Congratulations! Now you can login to system
            <% } else if(registered == "-1") {%> 
               Your password or email is incorrect, please try again!
            <% } else { %>
                Login
            <%}%> 
        </h2>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Email" name="email" required="required">
        </div>
        <div class="form-group">
            <input type="password" class="form-control" placeholder="Password" name="password" required="required">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">Log in</button>
        </div>
        <div class="clearfix">
            <label class="pull-left checkbox-inline"><input type="checkbox"> Remember me</label>
            <a href="/users/register" class="pull-right">Don't have account?</a>
        </div>
        <div class="clearfix text-center">
            <a href="/users/resetpassword" class="pull-right">Forget your password? </a>
        </div>
     </form>
</div>